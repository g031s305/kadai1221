        <div>
            <label>通知日：</label>
            <input type="text" name="remind"/>
        </div>
        <div>
            <label>優先度：</label>
            <input type="text" name="priority"/>
        </div>
        <div>
            <label>チーム：</label>
            <input type="text" name="teamname"/>
        </div>
            <input type="submit" value="登録"/>
        </div>
        <div><%= error %></div>
    </form>
</body>
